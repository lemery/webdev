<% content_for :page_title do %>
<title>To-Do List</title>
<% end %>

<% content_for :extra_stylesheets do %>
<link rel="stylesheet" href="liststyle.css" type="text/css"> 
<% end %>

<% content_for :extra_css do %>
table {
	max-width: 800px;
}
<% end %>

		<table class="table table-hover table-bordered" style="width:800px">
			<tr>
				<th>Task</th>
				<th>Due Date</th>
			</tr>
			<% @list.order(:due).each do |line| %>
			<tr>
				<td>
					<%= line.description %>
				</td>
				<td>
					<%= line.due %>
				</td>
			</tr>
			<% end %>
		</table>
